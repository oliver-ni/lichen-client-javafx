<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.fxmisc.richtext.CodeArea?>

<fx:root xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" type="VBox" styleClass="file-pane">
   <Label fx:id="label" text="Student 1" />
   <HBox styleClass="select-row">
      <children>
         <Button text="Load File" onAction="#handleSelectFile" />
         <Label fx:id="pathLabel" text="" />
      </children>
   </HBox>
   <CodeArea fx:id="codeArea" VBox.vgrow="ALWAYS" />
</fx:root>
